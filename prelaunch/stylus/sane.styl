.background
	position absolute
	top 0
	left 0
	height 100%
	width 100%
	background-image url('http://31.media.tumblr.com/aa1779a718c2844969f23c4f5dec86b1/tumblr_mvyxhonf601st5lhmo1_1280.jpg')
	background-repeat no-repeat
	background-position center center fixed
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	opacity 0.3

.row
	margin 0

.blast
	position absolute
	top 50%
	margin-top -200px
	text-align center
	font-family 'Roboto', sans-serif
	font-weight 100
	font-size 50px
	font-color #393c3d

	span
		display block
		margin-top 25px
		line-height 50px

	img
		position relative
		left 50%
		margin-left -50px
		height 100px
		width 100px
		display block

#mc_embed_signup
	margin-top 20px
	font 14px 'Roboto',sans-serif 
	font-weight 300
	
	form
		padding 0

	label
		font-weight 300
		text-align center
		margin-bottom 0

	input.email
		position relative
		font-weight 300
		width 300px
		left 50%
		position relative
		margin-left -150px
		border 0px solid #999
		border-radius 5px
		padding 10px 5px

	input.button
		position relative
		background-color #2ecc71
		font-weight 300
		width 200px
		height 40px
		left 50%
		position relative
		margin-left -100px

	input.button:hover
		background-color #27ae60